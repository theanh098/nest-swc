{
  "name": "nest-swc",
  "version": "0.0.1",
  "description": "nestjs functional programing style",
  "author": "theanh098",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run && pnpm test:database",
    "test:watch": "vitest",
    "test:unit": "TEST_DIR=unit vitest run",
    "test:e2e": "TEST_DIR=e2e vitest run",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:setup": "pnpm db:migrate && TARGET=TEST pnpm exec ts-node ./scripts/database.migrate.ts && rm -rf drizzle",
    "test:db:cleanup": "pnpm exec ts-node ./scripts/database.test.cleanup.ts",
    "pretest:database": "POSTGRES_USER=postgres POSTGRES_PASSWORD=test POSTGRES_DB=db_test docker compose -f ./test-helper/docker-compose.yml up -d",
    "test:database": "pnpm pretest:database && pnpm test:setup && TEST_DIR=database vitest run --sequence.shuffle --single-thread && pnpm test:db:cleanup",
    "db:push": "drizzle-kit push:pg",
    "db:pull": "drizzle-kit introspect:pg",
    "db:migrate": "drizzle-kit generate:pg",
    "db:sync": "pnpm exec drizzle-kit push:pg"
  },
  "dependencies": {
    "@anatine/zod-nestjs": "^2.0.3",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-fastify": "^10.2.7",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "fp-ts": "^2.16.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^7.3.7",
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.92",
    "@types/node": "^20.8.3",
    "@types/pg": "^8.10.3",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "^0.34.6",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.0.0",
    "fastify": "^4.23.2",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "unplugin-swc": "^1.4.2",
    "vitest": "^0.34.6"
  }
}
